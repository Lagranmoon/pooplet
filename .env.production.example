# Production Environment Security Configuration

# Application
NODE_ENV=production
BETTER_AUTH_URL=https://your-domain.com

# Security Settings
BETTER_AUTH_SECURE=true
ENABLE_RATE_LIMITING=true
DISABLE_REGISTRATION=false

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/pooplet_prod?schema=public"

# Environment Security
# Set these in your production deployment platform
# SECRET_KEY=your-secret-key
# SESSION_SECRET=your-session-secret

# Rate Limiting (Production)
# These should be set based on your expected traffic
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Logging
LOG_LEVEL=error
ENABLE_SECURITY_LOGGING=true